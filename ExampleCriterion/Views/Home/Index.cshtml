@model ExampleCriterion.CriterionBase.Model.TestModel
@using Criterion
@{
    ViewBag.Title = "Criterion";
}
<link href="../../CriterionBase/ContentCriterion/Criterion.css" rel="stylesheet" />
<script src="../../CriterionBase/ScriptCriterion/Criterion.js"></script>
<script src="../../CriterionBase/ScriptCriterion/JQueryCookis.js"></script>
<link rel="stylesheet" href="http://code.jquery.com/ui/1.9.1/themes/base/jquery-ui.css">
