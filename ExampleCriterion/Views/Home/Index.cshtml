        <tr>
            <td style="width: 23%; vertical-align: top">@Html.CriterionFor(a => a.Type)<br/><input id="Submit1" type="submit" value="as Post" /> </td>
            <td style="width: 77%; vertical-align: top">
                <table style="width: 100%; border: 0">
                    <tr>
                        <td>@Html.ActionLink("Telephones", "Index", new { tabs = "Telephones" }) </td>
                        <td>@Html.ActionLink("FootwearMen", "Index", new { tabs = "FootwearMen" }) </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
}
